						</svg>
					</a>
					<a href="https://www.linkedin.com/in/damien-chauveau-747892100/" title="LinkedIn" target="_blank" rel="noopener noreferrer">
						<svg width="24" height="24" fill="currentColor" viewbox="0 0 24 24">
							<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
						</svg>
					</a>
				</div>
			</div>
			<div class="col-lg-4 mt-5 mt-lg-0 text-center">
				<div class="profile-photo">
					<img src="/image/moi.jpg" alt="Photo de Damien">
				</div>
			</div>
		</div>
	</section>

	<!-- Skill Section -->
	<section id="competences" class="py-5 section-bg">
		<div class="container">
			<h2 class="section-title text-center mb-4">Compétences</h2>

			{% set categories = ['langage', 'framework', 'outil'] %}

			<div class="row">
				{% for category in categories %}
					<div class="col-md-4">
						<div class="skill-category mb-4">
							<h3 class="text-center">{{ category|capitalize }}</h3>

							{% set hasSkills = false %}

							{% for skill in skills %}
								{% if skill.category == category %}
									{% set hasSkills = true %}
									<div class="skill-item d-flex align-items-center mb-2">
										<img src="{{ skill.logo }}" class="skill-logo me-2" alt="{{ skill.name }}">
										<span>{{ skill.name }}</span>
									</div>
								{% endif %}
							{% endfor %}

							{% if not hasSkills %}
								<p class="text-muted text-center">Aucune compétence</p>
							{% endif %}
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>

	<!-- Portfolio -->
	<section id="portfolio" class="py-5">
		<div class="container">
			<h2 class="section-title">Portfolio</h2>
			<div class="row g-4">
				{% for project in projects %}
					<div class="col">
						<div class="project-card">
							<img src="{{ asset('image/portfolio_media/' ~ project.image) }}" alt="{{ project.title }}" class="img-fluid rounded-top">
							<div class="p-3">
								<h5>{{ project.title}}</h5>
								<p class="text-muted mb-2">{{ project.description}}</p>
								{% for skill in project.techStack %}
									<span class="text-success fw-semibold">{{ skill.name }}</span>
								{% endfor %}
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
			<div class="d-flex justify-content-center mt-4">
				<a href="{{ path('app_portfolio') }}" class="btn btn-primary px-4 py-2">Voir plus de projets</a>
			</div>
		</div>
	</section>

	<!-- Education Section -->
	<section class="education">
		<div class="container">
			<h2>Diplômes & Formation</h2>
			<div class="education-list">
				{% for education in educations %}
					<div class="education-item">
						<div class="education-year">
							{{ education.yearStart }}
							-
							{% if education.yearEnd is not null %}
								{{ education.yearEnd }}
							{% else %}
								En cours
							{% endif %}
						</div>
						{{ education.title}}</h3>
					<p>{{ education.institution}}</p>
				</div>
			{% endfor %}
		</div>
	</div>
</section>

<!-- Contact Section -->
<section id="contact" class="py-5 section-bg">
	<div class="container">
		<h2 class="section-title">Contact</h2>
		<div class="contact-card">
			<h3 class="mb-4">Restons en contact</h3>
			<p class="text-muted">Une question, un projet ou une collaboration ? N’hésitez pas à me laisser un message.</p>
			<div class="contact-section">
				{% include "form_contact.html.twig" %}
			</div>
		</div>
	</div>
</section>{% endblock %}
