{% extends 'base.html.twig' %}
{% block title %}Compétences
{% endblock %}
{% block body %}
	<!-- Skill Section -->
	<section id="competences" class="py-5 section-bg">
		<div class="container">
			<h2 class="section-title text-center mb-4">Compétences</h2>

			{% set categories = ['langage', 'framework', 'outil'] %}

			<div class="row">
				{% for category in categories %}
					<div class="col-md-4">
						<div class="skill-category mb-4">
							<h3 class="text-center">{{ category|capitalize }}</h3>

							{% set hasSkills = false %}

							{% for skill in skills %}
								{% if skill.category == category %}
									{% set hasSkills = true %}
									<div class="skill-item d-flex align-items-center mb-2">
										{% if skill.logo matches '/\.(jpg|jpeg|png|svg|webp)$/i' %}
											<img src="{{ asset(skill.logo) }}" class="skill-logo me-2" alt="{{ skill.name }}">
										{% else %}
											<i class="{{ skill.logo }} fs-2 me-2"></i>
										{% endif %}
										<span>{{ skill.name }}</span>
									</div>
								{% endif %}
							{% endfor %}

							{% if not hasSkills %}
								<p class="text-muted text-center">Aucune compétence</p>
							{% endif %}
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
